<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:columnCount="2"

        android:orientation="horizontal" >
        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker"
            android:layout_columnSpan="2"
            android:layout_gravity="fill" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From:"
            android:id="@+id/tvFrom"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To:"
            android:id="@+id/tvTo"
           />
        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePickerFrom"
            />

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePickerTo"
         />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Job Description"
            android:id="@+id/etDesc"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"/>
        <Button
            android:id="@+id/btnAddPhoto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/takePhoto" />

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <Button
            android:id="@+id/btnRecordAudio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/recordAudio" />



        <Button
            android:id="@+id/btnPlayRecord"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/PlayRecord" />



        <Switch
            android:id="@+id/swSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="@string/sentSMS" />

        <Switch
            android:id="@+id/swRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="@string/repeatDay" />

        <Spinner
            android:id="@+id/spRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/repeat_prompt"
            android:layout_marginTop="10dp"
            android:spinnerMode="dialog"
            style="?android:attr/spinnerStyle"/>

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePickerRepeat"
            android:layout_columnSpan="2"
            android:layout_gravity="fill" />
        <Button

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="10sp"

            android:text="Submit"

            android:id="@+id/btnSubmit"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            />



        <Button

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="10sp"

            android:text="Cancel"

            android:id="@+id/btnCancel"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            />

    </GridLayout>
</ScrollView>